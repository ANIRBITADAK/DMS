<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/primaryTextColor"
    android:layout_marginTop="5sp"
    android:id="@+id/ticketCardView"
    app:strokeWidth="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10sp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subjectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Subject"
                android:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/assignSubjectText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/subjectTextView"
                android:fontFamily="@font/roboto_regular"
                android:autoSizeTextType="uniform" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25sp">

            <TextView
                android:id="@+id/sourceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Source"
                android:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/assignSourceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/sourceTextView"
                android:fontFamily="@font/roboto_regular"
                android:autoSizeTextType="uniform" />

        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>