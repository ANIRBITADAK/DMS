<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TicketAssignmentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign Ticket"
                android:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_regular"/>

            <RelativeLayout
                android:layout_marginTop="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subjectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Subject"
                    android:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/assignSubjectText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@id/subjectTextView"
                    android:fontFamily="@font/roboto_regular"
                    android:autoSizeTextType="uniform" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sourceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Source"
                    android:autoSizeTextType="uniform"/>

                <TextView
                    android:id="@+id/assignSourceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@id/sourceTextView"
                    android:fontFamily="@font/roboto_regular"
                    android:autoSizeTextType="uniform" />

            </RelativeLayout>

            <Button
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showImageBtn"
                android:text="Show Image"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:background="@drawable/login_button_bk"/>



            <TextView
                android:layout_marginTop="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Enter Comment"
                android:autoSizeTextType="uniform" />

            <EditText
                    android:layout_marginTop="20sp"
                    android:id="@+id/assignCommentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/modifiedEditText"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Assign To:"
                    android:textSize="18sp" />

            <Spinner
                android:id="@+id/assignUserSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/roboto_regular"
                android:text="Priority:"
                android:autoSizeTextType="uniform" />

            <Spinner
                android:id="@+id/assignPrioritySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp" />
            <Button
                android:id="@+id/ticketDetailsSaveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:layout_marginBottom="20sp"
                android:textColor="@color/white"
                android:background="@drawable/login_button_bk"
                android:text="Save"
                android:fontFamily="@font/roboto_regular"/>


        </LinearLayout>
    </ScrollView>

    </FrameLayout>