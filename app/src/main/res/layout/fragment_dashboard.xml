<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <LinearLayout
        android:id="@+id/ticketStateCountLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8sp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ticketStateOuterLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/newTicketsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginRight="40sp">

                    <LinearLayout
                        android:id="@+id/newTicketCountLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/newCountTicketText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#03A9F4"
                            android:textSize="100sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/newTicketTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="New"
                            android:textAlignment="center"
                            android:textColor="#012A53"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/assigned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginRight="40sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/assignedTicketCountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#FF1100"
                            android:textSize="100sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/assignedTicketTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Assigned"
                            android:textAlignment="center"
                            android:textColor="#012A53"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/inProgressCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginRight="40sp">

                    <LinearLayout
                        android:id="@+id/inProgressLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/inprogressTicketCountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#FFC107"
                            android:textSize="100sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/inProgressTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="In-Progress"
                            android:textAlignment="center"
                            android:textColor="#012A53"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/resolvedTicketCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginRight="40sp"
                    android:layout_marginBottom="50sp">

                    <LinearLayout
                        android:id="@+id/resolvedLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/resolvedTicketCountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#4CAF50"
                            android:textSize="100sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resolvedTicketTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Resolved"
                            android:textAlignment="center"
                            android:textColor="#012A53"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>